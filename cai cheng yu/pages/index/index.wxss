/**index.wxss**/
page{
  background-color:bisque;
  background-image: url("https://ss0.bdstatic.com/70cFvHSh_Q1YnxGkpoWK1HF6hhy/it/u=3968854929,902711617&fm=26&gp=0.jpg");
  background-size:100% 100%;
}
.center{
  width:100%;
  height:100%;

}
.info{
  padding:40rpx;
  height:1000rpx;
}
.fixd{
  position:absolute;
  right:30rpx;
  top:30rpx;
  text-align:center;
  line-height:40rpx;
  font-size:20rpx;
  width:100rpx;
  border-radius:20rpx;
  background-color:antiquewhite;
}
.top{
  height:50rpx;
  width:350rpx;
  padding-left:100rpx;
  font-size:12px;
  margin-top:150rpx;
}
.top-left{
  float:left; 
  line-height:50rpx;
  width:100rpx;
  border:2rpx solid black;
  border-radius:20rpx;
  text-align:center;
  margin-right:40rpx;
  box-shadow:10rpx -10rpx 0 0rpx black;
}
.show{
  height:80rpx;
  width:450rpx;
  margin:0 auto;
  margin-top:250rpx;
  border:5rpx solid burlywood;
  border-radius:20rpx;
  opacity:0.8;
  overflow:hidden;
}
.show_0,.show_1,.show_2,.show_3{
  float:left;
  width:80rpx;
  margin-left:25rpx;
  background-color:bisque;
  line-height:80rpx;
  text-align:center;
  border-radius:40rpx;
  box-shadow:1rpx 0rpx 3rpx green inset;
  visibility: visible;
}
.select{
  left:120rpx;
  margin-top:100rpx;
  height:60rpx;
}
.select-pro{
  float:left;
  margin-left:75rpx;
  width:120rpx;
  font-size:30rpx;
  background-color:aquamarine;
  border-radius:30rpx;
  text-align:center;
  line-height:60rpx;
  box-shadow:2rpx 4rpx 2rpx black;
}
.search{
  height:300rpx;
  width:600rpx;
  margin:0 auto;
  padding-top:70rpx;
}
.search button{
  float:left;
  width:80rpx;
  margin: 10rpx 10rpx;
  background-color:bisque;
  line-height:80rpx;
  text-align:center;
  border-radius:40rpx;
  box-shadow:1rpx 0rpx 3rpx green inset;
  visibility: visible;
}
